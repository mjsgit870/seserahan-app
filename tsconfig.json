{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "types": [
      "vite/client"
    ],

    // path alias
    "baseUrl": ".",
    "paths": {
      "@/*": ["./resources/js/*"]
    }
  },
  "exclude": ["node_modules"],
  "include": [
    "resources/js/**/*.ts",
    "resources/js/**/*.tsx",
  ]
}
